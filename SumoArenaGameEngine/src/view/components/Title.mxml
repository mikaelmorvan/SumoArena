<s:VGroup
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/mx"
	width="100%"
	gap="0">
	<fx:Declarations>
		<fx:String id="label" />
	</fx:Declarations>
	<s:Label
		text="{label}"
		color="#444444"
		fontWeight="bold"/>
	<s:Line
		width="100%">
		<s:stroke>
			<s:SolidColorStroke color="0x666666" weight="1" caps="round"/>
		</s:stroke>
	</s:Line>
	<s:Line
		width="100%">
		<s:stroke>
			<s:SolidColorStroke color="0xFFFFFF" weight="1" caps="round"/>
		</s:stroke>
	</s:Line>
</s:VGroup>